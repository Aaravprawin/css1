<style> 
body {
  background-color: lightblue;
}

div {
  width: 100px;
  height: 100px;
  background-color: red;
  position: relative;
  animation-name: example;
  animation-duration: 4s;
  animation-iteration-count: infinite;
}

.blue-square {
  width: 100px;
  height: 100px;
  background-color: blue;
  position: absolute;
  animation-name: mar;
  animation-duration: 8s;
  animation-iteration-count: infinite;
}

.blue-circle{
  width: 50px;
  height: 50px;
  border-radius:50%;
  background-color:blue;
  animation-name:move;
  animation-duration:10s;
  animation-iteration-count:infinite;
}  

@keyframes example {
  0%   {background-color: red; left: 0px; top: 0px; border-radius: 0%;}
  25%  {background-color: orange; left: 00px; top: 100px; border-radius: 25%;}
  50%  {background-color: green; left: 0px; top: 200px; border-radius: 50%;}
  75%  {background-color: yellow; left: 0px; top: 100px; border-radius: 25%;}
  100% {background-color: red; left: 0px; top: 0px; border-radius: 0%;}
}
@keyframes move{
  0%   {left: 0px; top: 200px;}
  25%  {left: 100px; top: 200px;}
  50%  {left: 200px; top: 200px;}
  75%  {left: 100px; top: 200px;}
  100% {left: 0px; top: 200px;}
}

@keyframes mar {
  0% {
    transform: rotate(0deg);
    background-color: blue;
    left: 0px;
  }
  25% {
    transform: rotate(90deg);
    background-color: purple;
    left: 100px; 
  }
  50% {
    transform: rotate(180deg);
    background-color: pink;
    left: 200px
  }
  75% {
    transform: rotate(270deg);
    background-color: green;
    left: 100px;
  }
  100% {
    transform: rotate(360deg);
    background-color: blue;
    left: 0px;
  }
}
</style>
